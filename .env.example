# ============================================================================
# SonIA Core â Environment Variables
# BloomsPal
# ============================================================================

# PostgreSQL (Railway provides this automatically)
DATABASE_URL=postgresql://user:pass@host:port/dbname

# AWS DynamoDB (READ ONLY credentials)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
DYNAMO_TABLE_RESERVES=reserves

# FedEx API
FEDEX_API_KEY=your_fedex_api_key
FEDEX_SECRET_KEY=your_fedex_secret_key
FEDEX_ACCOUNT=your_fedex_account
FEDEX_BASE_URL=https://apis.fedex.com
FEDEX_BATCH_SIZE=30
FEDEX_BATCH_DELAY=0.5

# Odoo
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your_odoo_db
ODOO_USERNAME=your_odoo_user
ODOO_PASSWORD=your_odoo_password

# SonIA Agent (WhatsApp)
SONIA_AGENT_URL=https://sonia-agent-production.up.railway.app
SONIA_AGENT_API_KEY=your_internal_api_key

# Admin
ADMIN_WHATSAPP=573001234567

# Anomaly Thresholds (days)
THRESHOLD_TRANSIT_DAYS=7
THRESHOLD_CUSTOMS_DAYS=5
THRESHOLD_DELIVERY_ATTEMPT_DAYS=2
THRESHOLD_LABEL_NO_MOVEMENT_DAYS=5

# Cron (4 AM COT)
CRON_HOUR=4
CRON_MINUTE=0

# Server
PORT=8080
